@model HRCommerceApp.Core.DTOs.RRHH.DepartamentoDto
@{
    ViewData["Title"] = "Detalles del Departamento";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <h2><i class="fas fa-building me-2"></i>@ViewData["Title"]</h2>
    <a href="@Url.Action("Index")" class="btn btn-secondary">
        <i class="fas fa-arrow-left me-1"></i>Volver
    </a>
</div>

<div class="row">
    <div class="col-md-6">
        <div class="card">
            <div class="card-header bg-primary text-white">
                <h5 class="card-title mb-0">Información del Departamento</h5>
            </div>
            <div class="card-body">
                <dl class="row">
                    <dt class="col-sm-4">Nombre:</dt>
                    <dd class="col-sm-8">@Model.Nombre</dd>

                    <dt class="col-sm-4">Presupuesto:</dt>
                    <dd class="col-sm-8">Q @Model.Presupuesto.ToString("N2")</dd>

                    <dt class="col-sm-4">Total de Empleados:</dt>
                    <dd class="col-sm-8">@Model.TotalEmpleados</dd>

                    <dt class="col-sm-4">Fecha de Creación:</dt>
                    <dd class="col-sm-8">@Model.CreatedAt.ToString("dd/MM/yyyy")</dd>
                </dl>
            </div>
            <div class="card-footer">
                <div class="btn-group" role="group">
                    <a href="@Url.Action("Edit", new { id = Model.IdDepartamento })" class="btn btn-warning">
                        <i class="fas fa-edit me-1"></i>Editar
                    </a>
                    <a href="@Url.Action("Index")" class="btn btn-secondary">
                        <i class="fas fa-list me-1"></i>Volver a la Lista
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>