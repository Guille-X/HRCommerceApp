@model HRCommerceApp.Core.DTOs.RRHH.UpdateEmpleadoDto
@{
    ViewData["Title"] = "Editar Empleado";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <h2><i class="fas fa-edit me-2"></i>@ViewData["Title"]</h2>
    <a href="@Url.Action("Index")" class="btn btn-secondary">
        <i class="fas fa-arrow-left me-1"></i>Volver
    </a>
</div>

<div class="row">
    <div class="col-md-8">
        <div class="card">
            <div class="card-header bg-primary text-white">
                <h5 class="card-title mb-0">Editar Información del Empleado</h5>
            </div>
            <div class="card-body">
                <form asp-action="Edit" method="post">
                    @Html.AntiForgeryToken()
                    <input type="hidden" name="id" value="@ViewContext.RouteData.Values["id"]" />

                    <div class="row">
                        <div class="col-md-6">
                            <div class="mb-3">
                                <label asp-for="Nombres" class="form-label">Nombres *</label>
                                <input asp-for="Nombres" class="form-control" />
                                <span asp-validation-for="Nombres" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="mb-3">
                                <label asp-for="Apellidos" class="form-label">Apellidos *</label>
                                <input asp-for="Apellidos" class="form-control" />
                                <span asp-validation-for="Apellidos" class="text-danger"></span>
                            </div>
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-md-6">
                            <div class="mb-3">
                                <label asp-for="Documento" class="form-label">Documento (CUI) *</label>
                                <input asp-for="Documento" class="form-control" />
                                <span asp-validation-for="Documento" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="mb-3">
                                <label asp-for="FechaIngreso" class="form-label">Fecha de Ingreso *</label>
                                <input asp-for="FechaIngreso" type="date" class="form-control" />
                                <span asp-validation-for="FechaIngreso" class="text-danger"></span>
                            </div>
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-md-6">
                            <div class="mb-3">
                                <label asp-for="Puesto" class="form-label">Puesto *</label>
                                <input asp-for="Puesto" class="form-control" />
                                <span asp-validation-for="Puesto" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="mb-3">
                                <label asp-for="Jerarquia" class="form-label">Jerarquía *</label>
                                <input asp-for="Jerarquia" class="form-control" />
                                <span asp-validation-for="Jerarquia" class="text-danger"></span>
                            </div>
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-md-6">
                            <div class="mb-3">
                                <label asp-for="SalarioActual" class="form-label">Salario Actual *</label>
                                <input asp-for="SalarioActual" type="number" step="0.01" class="form-control" />
                                <span asp-validation-for="SalarioActual" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="mb-3">
                                <label asp-for="DepartamentoId" class="form-label">Departamento *</label>
                                <select asp-for="DepartamentoId" class="form-select" asp-items="ViewBag.Departamentos">
                                    <option value="">Seleccione un departamento</option>
                                </select>
                                <span asp-validation-for="DepartamentoId" class="text-danger"></span>
                            </div>
                        </div>
                    </div>

                    <div class="d-grid gap-2 d-md-flex justify-content-md-end">
                        <button type="submit" class="btn btn-primary">
                            <i class="fas fa-save me-1"></i>Guardar Cambios
                        </button>
                        <a href="@Url.Action("Index")" class="btn btn-secondary">Cancelar</a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}