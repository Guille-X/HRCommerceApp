@model HRCommerceApp.Core.DTOs.RRHH.EmpleadoDto
@{
    ViewData["Title"] = "Detalles del Empleado";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <h2><i class="fas fa-user me-2"></i>@ViewData["Title"]</h2>
    <a href="@Url.Action("Index")" class="btn btn-secondary">
        <i class="fas fa-arrow-left me-1"></i>Volver
    </a>
</div>

<div class="row">
    <div class="col-md-6">
        <div class="card">
            <div class="card-header bg-primary text-white">
                <h5 class="card-title mb-0">Información Personal</h5>
            </div>
            <div class="card-body">
                <dl class="row">
                    <dt class="col-sm-4">Nombre Completo:</dt>
                    <dd class="col-sm-8">@Model.NombreCompleto</dd>

                    <dt class="col-sm-4">Documento (CUI):</dt>
                    <dd class="col-sm-8">@Model.Documento</dd>

                    <dt class="col-sm-4">Puesto:</dt>
                    <dd class="col-sm-8">@Model.Puesto</dd>

                    <dt class="col-sm-4">Jerarquía:</dt>
                    <dd class="col-sm-8">@Model.Jerarquia</dd>

                    <dt class="col-sm-4">Departamento:</dt>
                    <dd class="col-sm-8">@Model.DepartamentoNombre</dd>

                    <dt class="col-sm-4">Salario Actual:</dt>
                    <dd class="col-sm-8">Q @Model.SalarioActual.ToString("N2")</dd>

                    <dt class="col-sm-4">Fecha de Ingreso:</dt>
                    <dd class="col-sm-8">@Model.FechaIngreso.ToString("dd/MM/yyyy")</dd>

                    <dt class="col-sm-4">Último Aumento:</dt>
                    <dd class="col-sm-8">@Model.FechaUltimoAumento.ToString("dd/MM/yyyy")</dd>

                    @if (Model.FechaBaja.HasValue)
                    {
                        <dt class="col-sm-4">Fecha de Baja:</dt>
                        <dd class="col-sm-8 text-danger">@Model.FechaBaja.Value.ToString("dd/MM/yyyy")</dd>
                    }
                </dl>
            </div>
        </div>
    </div>
</div>