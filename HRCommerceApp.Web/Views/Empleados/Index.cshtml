@model IEnumerable<HRCommerceApp.Core.DTOs.RRHH.EmpleadoDto>
@{
    ViewData["Title"] = "Gestión de Empleados";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <h2><i class="fas fa-users me-2"></i>@ViewData["Title"]</h2>
    @if (User.IsInRole("Administrador") || User.IsInRole("Operador"))
    {
        <a href="@Url.Action("Create")" class="btn btn-primary">
            <i class="fas fa-plus me-1"></i>Nuevo Empleado
        </a>
    }
</div>

@if (TempData["Error"] != null)
{
    <div class="alert alert-danger alert-dismissible fade show" role="alert">
        @TempData["Error"]
        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
    </div>
}

<div class="card">
    <div class="card-body">
        <div class="table-responsive">
            <table class="table table-striped table-hover">
                <thead class="table-dark">
                    <tr>
                        <th>Nombre Completo</th>
                        <th>Documento</th>
                        <th>Puesto</th>
                        <th>Departamento</th>
                        <th>Salario</th>
                        <th>Fecha Ingreso</th>
                        <th>Acciones</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>@item.NombreCompleto</td>
                            <td>@item.Documento</td>
                            <td>@item.Puesto</td>
                            <td>@item.DepartamentoNombre</td>
                            <td>Q @item.SalarioActual.ToString("N2")</td>
                            <td>@item.FechaIngreso.ToString("dd/MM/yyyy")</td>
                            <td class="table-actions">
                                <a href="@Url.Action("Details", new { id = item.IdEmpleado })" class="btn btn-sm btn-info" title="Ver detalles">
                                    <i class="fas fa-eye"></i>
                                </a>
                                @if (User.IsInRole("Administrador") || User.IsInRole("Operador"))
                                {
                                    <a href="@Url.Action("Edit", new { id = item.IdEmpleado })" class="btn btn-sm btn-warning" title="Editar">
                                        <i class="fas fa-edit"></i>
                                    </a>
                                }
                                @if (User.IsInRole("Administrador"))
                                {
                                    <form method="post" action="@Url.Action("Delete", new { id = item.IdEmpleado })" class="d-inline" onsubmit="return confirm('¿Está seguro de que desea eliminar este empleado?');">
                                        @Html.AntiForgeryToken()
                                        <button type="submit" class="btn btn-sm btn-danger" title="Eliminar">
                                            <i class="fas fa-trash"></i>
                                        </button>
                                    </form>
                                }
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>